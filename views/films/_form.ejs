<div class="wideRow">
    <label for="preg"  class="itemNarrow">Question:</label>
    <input type="text" class="itemWide" id="preg" name="question" value="<%= film.question %>" placeholder="Question" autocomplete="off"/>
    </div>
    
    
    <div class="wideRow">
    <label for="resp"  class="itemNarrow">Answer:</label>
    <input type="text" class="itemWide" id="resp" name="answer" value="<%= film.answer %>" placeholder="Answer" autocomplete="off"/>
    </div>
    
    <br/>
    
    <label for="img">Adjuntar archivo:</label>
    <input type="file" id="mp4" name="video"/>
    
    <br/>
    
    <% if (film.id) { %>
    <label for="mp4">Mantener archivo anterior:</label>
    <input type="checkbox" name="keepAttachment" value="1" checked>
    <% } %>
    
    <br/>
    
    <a href="/goback"><button type="button">Cancel</button></a>
    
    <input type="submit" value="Save">
    