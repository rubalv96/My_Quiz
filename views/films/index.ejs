<h1>
    Películas:
</h1>

<table>
    <% for (var i in films) { %>
    <% var film = films[i]; %>
    <tr>
        <td>
            <a href="/films/<%= film.id %>/show"><%= film.name %></a>
        </td>
    
        <td>
            <a href="/films/<%= film.id %>?_method=DELETE"
               onClick="return confirm('Delete: <%= film.name %>');">
                <button>Borrar pelicula</button>
            </a>
        </td>
    </tr>
    <% } %>
</table>

<a href="/films/new"><button type="button">Agregar película</button></a>