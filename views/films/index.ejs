<div class="right">
    <form method="get" action="<%= url %>">
        <input type="text" name="search" value="<%= locals.search || '' %>" placeholder="question to search" autocomplete="off" />
        <input type="submit" value="Search">


    </form>
</div>

<h1>
    <%= title || "Questions" %>:
</h1>

<table id="quizzesIndex">
    <% for (var i in films) { %>
    <% var film = films[i]; %>
    <tr>

        <td>
            <% var attachment = film.attachment; %>
            <% include ../attachments/_show %>
        </td>

        <td>

            <a href="/films/<%= film.id %>/play"><%= film.question %></a>
            <br />
        </td>
        <td>
            <% if (session.user) { %>
                <% if (session.user.isAdmin) { %>
                        <a href="/films/<%= film.id %>"><button>show</button></a>

                        <a href="/films/<%= film.id %>/edit"><button>edit</button></a>

                        <a href="/films/<%= film.id %>?_method=DELETE"
                           onClick="return confirm('Delete: <%= film.question %>');">
                            <button>delete</button>
                        </a>
                <% } %>
            <% } %>
        </td>

    </tr>
    <% } %>
</table>

<% if (session.user.isAdmin) { %>
    <a href="/films/new"><button type="button">Create New Question of Films</button></a>
<% } %>
